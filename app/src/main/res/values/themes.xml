<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CeArPlAr" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>

        <!-- Evita edge-to-edge / fullscreen -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
    </style>
    <style name="Theme.CeArPlAr.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.CeArPlAr.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.CeArPlAr.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>