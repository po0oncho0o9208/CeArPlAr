<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentTalleres">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50sp"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/btntaller1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:background="@drawable/btnformat"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="120sp"
                        android:layout_height="120sp"
                        android:layout_margin="15sp"
                        android:background="@drawable/estofado" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15sp"
                        android:text="Dorado y estofado \n"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btntaller2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:background="@drawable/btnformat"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="120sp"
                        android:layout_height="120sp"
                        android:layout_margin="15sp"
                        android:background="@drawable/tallado" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15sp"
                        android:text="Talla en madera\n"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:id="@+id/btntaller3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:background="@drawable/btnformat"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="120sp"
                        android:layout_height="120sp"
                        android:layout_margin="15sp"
                        android:background="@drawable/lectura" />

                    <TextView
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15sp"
                        android:text="Taller de lectura \nPluma mÃ¡gica"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btntaller4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:background="@drawable/btnformat"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="120sp"
                        android:layout_height="120sp"
                        android:layout_margin="15sp"
                        android:background="@drawable/concha" />

                    <TextView
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15sp"
                        android:text="Incrustacion en \nconcha"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:id="@+id/btntaller5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:background="@drawable/btnformat"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="120sp"
                        android:layout_height="120sp"
                        android:layout_margin="15sp"
                        android:background="@drawable/porcelana" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15sp"
                        android:text="Pintura en \nporcelana"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btntaller6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:background="@drawable/btnformat"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="120sp"
                        android:layout_height="120sp"
                        android:layout_margin="15sp"
                        android:background="@drawable/orfebreria" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15sp"
                        android:text="Orfebreria\n"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50sp">

                <LinearLayout
                    android:id="@+id/btntaller7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:background="@drawable/btnformat"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="120sp"
                        android:layout_height="120sp"
                        android:layout_margin="15sp"
                        android:background="@drawable/cuero" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15sp"
                        android:text="Piel\n"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btntaller8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:background="@drawable/btnformat"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="120sp"
                        android:layout_height="120sp"
                        android:layout_margin="15sp"
                        android:background="@drawable/tapiz" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15sp"
                        android:text="Tapiz\n"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>