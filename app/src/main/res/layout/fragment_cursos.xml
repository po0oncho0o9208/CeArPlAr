<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentCursos">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50sp"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/btncurso1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:background="@drawable/btnformat"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="120sp"
                        android:layout_height="120sp"
                        android:layout_margin="15sp"
                        android:background="@drawable/dibujo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15sp"
                        android:text="Dibujo y pintura\n"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btncurso2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:background="@drawable/btnformat"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="120sp"
                        android:layout_height="120sp"
                        android:layout_margin="15sp"
                        android:background="@drawable/escultura" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15sp"
                        android:text="Escultura\n"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:id="@+id/btncurso3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:background="@drawable/btnformat"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="120sp"
                        android:layout_height="120sp"
                        android:layout_margin="15sp"
                        android:background="@drawable/talla" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15sp"
                        android:text="Marqueteria\n"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btncurso4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:background="@drawable/btnformat"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="120sp"
                        android:layout_height="120sp"
                        android:layout_margin="15sp"
                        android:background="@drawable/vidrios" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15sp"
                        android:text="Vidrio\n"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50sp">

                <LinearLayout
                    android:id="@+id/btncurso5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:background="@drawable/btnformat"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="120sp"
                        android:layout_height="120sp"
                        android:layout_margin="15sp"
                        android:background="@drawable/grabado" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15sp"
                        android:text="Pirograbado\n"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btncurso6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:background="@drawable/btnformat"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="120sp"
                        android:layout_height="120sp"
                        android:layout_margin="15sp"
                        android:background="@drawable/ceramica" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15sp"
                        android:text="Ceramica\n"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>